# Database Configuration
# SQLite database file location
DATABASE_URL="file:./dev.db"

# Server Configuration
# Port for the backend server
PORT=5000

# Environment mode (development, production)
NODE_ENV=development

# JWT Authentication
# Secret key for JWT token signing - CHANGE THIS IN PRODUCTION
JWT_SECRET=your_secret_key_here_change_in_production

# JWT token expiration time (e.g., 24h, 7d, 30m)
JWT_EXPIRES_IN=24h

# File Upload Configuration
# Maximum file size in bytes (default: 5MB)
MAX_FILE_SIZE=5242880

# Upload directory path
UPLOAD_DIR=./uploads

# Application Configuration
# Maximum radius in meters for GPS validation
MAX_RADIUS_METERS=100

# CORS Configuration (optional)
# Comma-separated list of allowed origins
# Example: CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_ORIGIN=*
