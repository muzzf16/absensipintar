generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      String   // admin, supervisor, karyawan
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  officeId  String?
  office    Office?  @relation(fields: [officeId], references: [id])

  attendances   Attendance[]
  visits        Visit[]
  approvals     Approval[]
  notifications Notification[]
}

model Office {
  id        String   @id @default(uuid())
  name      String
  latitude  Float
  longitude Float
  radius    Int      @default(100) // in meters
  
  // Work Schedule Settings
  workStartTime    String   @default("08:00")  // Format HH:mm
  workEndTime      String   @default("17:00")  // Format HH:mm
  gracePeriod      Int      @default(15)       // Minutes tolerance for late
  enableBlocking   Boolean  @default(false)    // Block check-in outside hours
  blockBeforeTime  String   @default("06:00")  // Earliest check-in allowed
  blockAfterTime   String   @default("12:00")  // Latest check-in allowed
  
  users     User[]
  billings  Billing[]
}

model Attendance {
  id             String    @id @default(uuid())
  userId         String
  attendanceDate DateTime  @default(now()) // Stored as datetime, but conceptually date
  checkIn        DateTime?
  checkOut       DateTime?
  
  // Photo selfie URLs
  checkInPhotoUrl   String?
  checkOutPhotoUrl  String?
  
  // GPS Coordinates
  checkInLatitude   Float?
  checkInLongitude  Float?
  checkOutLatitude  Float?
  checkOutLongitude Float?
  
  user User @relation(fields: [userId], references: [id])
  visits Visit[]
}


model Customer {
  id        String   @id @default(uuid())
  name      String
  address   String
  latitude  Float
  longitude Float
  visits    Visit[]
}

model Visit {
  id           String   @id @default(uuid())
  userId       String
  customerId   String
  attendanceId String?
  visitTime    DateTime @default(now())
  purpose      String
  notes        String?
  latitude     Float
  longitude    Float
  photoUrl     String?
  status       String   @default("pending") // pending, approved, rejected
  
  // Marketing & Prospek Fields
  // purpose is already defined above
  prospectStatus   String? // NOT_INTERESTED, INTERESTED, IN_PROGRESS, REALIZED
  potentialValue   Decimal?
  marketingNotes   String?
  followUpAt       DateTime?

  user       User       @relation(fields: [userId], references: [id])
  customer   Customer   @relation(fields: [customerId], references: [id])
  attendance Attendance? @relation(fields: [attendanceId], references: [id])
  approvals  Approval[]
  visitProducts VisitProduct[]
}

model VisitProduct {
  id             String   @id @default(uuid())
  visitId        String
  productCode    String
  productName    String
  prospectStatus String?
  potentialValue Decimal?

  visit Visit @relation(fields: [visitId], references: [id])
}

model Billing {
  id           String   @id @default(uuid())
  officeId     String?  // Optional for backward compatibility
  customerName String
  principal    Float    // Pokok
  interest     Float    // Bunga
  penalty      Float    // Denda
  total        Float
  dueDate      DateTime
  isPaid       Boolean  @default(false)
  uploadedAt   DateTime @default(now())
  
  office       Office?  @relation(fields: [officeId], references: [id])
}

model Approval {
  id         String   @id @default(uuid())
  visitId    String
  approverId String
  status     String   // approved, rejected
  note       String?
  approvedAt DateTime @default(now())

  visit    Visit @relation(fields: [visitId], references: [id])
  approver User  @relation(fields: [approverId], references: [id])
}

model Notification {
  id          String   @id @default(uuid())
  userId      String   // Receiver (Supervisor/Admin)
  title       String
  message     String
  isRead      Boolean  @default(false)
  type        String   // info, warning, success
  referenceId String?  // ID of related object
  createdAt   DateTime @default(now())

  user        User     @relation(fields: [userId], references: [id])
}
